extends ../layout/index

block content
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-3xl.font-extrabold= page

        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.rounded-md= error.msg
        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form(action="/auth/register" method="POST" noValidate).space-y-5
                    input(type="hidden" name="_csrf" value=`${csrfToken}`)
                    div 
                        label(for="name").block.text-sm.uppercase.text-gray-500.mb-2.font-bold Tu Nombre
                        input(type="text" placeholder="Tu Nombre" name="name" value= user ? user.name : "")#name.w-full.px-3.py-4.border.border-gray-300.rounded-md.placeholder-gray-400

                    div
                        label(for="email").block.text-sm.uppercase.text-gray-500.mb-2.font-bold E-mail
                        input(type="email" placeholder="ejemplo@ejemplo.com" name="email" value= user ? user.email : "")#email.w-full.px-3.py-4.border.border-gray-300.rounded-md.placeholder-gray-400

                    div
                        label(for="password").block.text-sm.uppercase.text-gray-500.mb-2.font-bold Contaseña
                        input(type="password" placeholder="Escriba una contraseña segura" name="password")#password.w-full.px-3.py-4.border.border-gray-300.rounded-md.placeholder-gray-400

                    div
                        label(for="repeat_pass").block.text-sm.uppercase.text-gray-500.mb-2.font-bold Repetir Contaseña
                        input(type="password" placeholder="Repita su contraseña segura" name="repeat_pass")#repeat_pass.w-full.px-3.py-4.border.border-gray-300.rounded-md.placeholder-gray-400

                    div.flex.items-center.justify-between
                        a(href="/auth/login").text-gray-500.text-xs ¿Ya tienes cuenta? Inicia Sesión
                        a(href="/auth/forgot").text-gray-500.text-xs Olvidé mi contraseña

                    input(type="submit" value="Crear Cuenta" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer rounded-md")